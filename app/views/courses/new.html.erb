<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>Enter Your Course Details</h1>
<%= simple_form_for @course do |f| %>
    <%= f.input :name %>
    <%= f.input :status %>
    <%= f.input :description %>
    <%= f.input :limit %>
    <%= f.input :start_date %>
  <br />  
    <%= f.submit 'Create' %>
  <% end %>
</div>  